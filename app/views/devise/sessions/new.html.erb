<nav class="nav"><h2 class="heading">LOG IN</h2></nav>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login">
    <div class="field">
      <%= f.email_field :email,
      class: "text_input2",
      placeholder: "Email", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, class: "text_input1",
      placeholder: "Password", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field remember">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "total" %>
      </div>
    <% end %>

    <div class="submit1">
      <%= f.submit "LOG IN", data: { turbo: false}, class: "submit_button" %>
    </div>
    <div class="login-links share">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
